{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ESNext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["./src/polyfill.ts"],
  "typedocOptions": {
    "entryPoints": ["./src/main.ts"],
    "out": "docs",
    "sort": "source-order",
    "githubPages": false,
    "disableSources": true,
    "hideBreadcrumbs": true
  }
}
